\beginsong{Laisse béton}
  [by={Renaud},cov={laisse-beton},album={Laisse béton}]

  \cover
  \gtab{Bm}{2:X02210}
  \gtab{A}{X02220}

  \begin{verse}
    J'étais tran\[Bm]quille, j'étais peinard
    Accoudé au flipper
    Le type est \[A]entré dans le bar
    A commandé un jambon \[Bm]beurre
    Puis il s'est approché de moi
    Puis il m'a regardé comme ça :
    {\og}T'as des bottes, mon pote
    Elles me bottent{\fg}
  \end{verse}

  \begin{verse*}
    J'parie qu'c'est des San\[A]tiags
    Viens faire un tour dans l'terrain \[Bm]vague
    J'vais t'apprendre un jeu rigo\[A]lo
    À grands coups de chaîne de vé\[Bm]lo
    J'te fais tes bottes à la bas\[A]ton
    Moi j'lui ai dit : {\og}Laisse bé\[Bm]ton !{\fg}
  \end{verse*}

  \begin{chorus}
    Il m'a filé une \[A]beigne
    J'ai filé une tor\[Bm]gnole
    M'a filé une châ\[A]taigne
    J'lui ai filé mes \[Bm]grolles
  \end{chorus}

  \begin{verse}
    J'étais tranquille, j'étais peinard
    Accoudé au comptoir
    Le type est entré dans le bar
    A commandé un café noir
    Puis il m'a tapé sur l'épaule
    Et m'a regardé d'un air drôle :
    {\og}T'as un blouson mecton
    L'est pas bidon{\fg}
  \end{verse}

  \begin{verse*}
    Moi j'me les gèle sur mon scooter
    Avec ça j's'rai un vrai rocker
    Viens faire un tour dans la ruelle
    J'te montrerai mon Opinel
    Et j'te chourav'rai ton blouson
    Moi j'lui ai dit : {\og}Laisse béton !{\fg}
  \end{verse*}

  \begin{chorus}
    Il m'a filé une beigne
    J'ai filé un marron
    M'a filé une châtaigne
    J'ai filé mon blouson
  \end{chorus}

  \begin{verse}
    J'étais tranquille, j'étais peinard
    Je réparais ma mobylette
    Le type a surgi sur l'boul'vard
    Sur sa grosse moto super-chouette
    S'est arrêté l'long du trottoir
    Et m'a regardé d'un air bête :
    {\og}T'as l'même blue jean que James Dean
    T'arrête ta frime{\fg}
  \end{verse}

  \begin{verse*}
    J'parie qu'c'est un vrai Levy-Strauss
    Il est carrément pas craignos
    Viens faire un tour derrière l'église
    Histoire que je te dévalise
    À grands coups de ceinturons
    Moi j'lui ai dit : {\og}Laisse béton !{\fg}
  \end{verse*}

  \begin{chorus}
    Il m'a filé une beigne
    J'ai filé une mandale
    M'a filé une châtaigne
    J'ai filé mon futal
  \end{chorus}

  \begin{verse}
    La morale de c'te pauvre histoire
    C'est qu'quand t'es tranquille et peinard
    Faut pas trop traîner dans les bars
    À moins d'être fringué en costard
    Quand à la fin d'une chanson
    Tu t'retrouves à poil, sans tes bottes
    Faut avoir d'l'imagination
    Pour trouver une chute rigolote
  \end{verse}

\endsong
